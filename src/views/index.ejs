<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('inc/all/head'); -%>
  <title>Car Clutch Club</title>
</head>

<body>
  <%- include('inc/all/navbar'); -%>

  <% if (typeof alert != "undefined") { %>
    <div class="alert alert-<%= alert.type %> m-0 h4 text-center" role="alert">
      <strong><%= alert.message %></strong>
    </div>
  <% } %>

  <!-- Modal include -->
  <%- include('inc/popups/main/sellCarModal') %>
  
  <div class="content container">
    <% if (session) { %> 
    <div class="row">
      <button type="button" class="btn btn-block btn-success btn-lg mt-3 ml-3 mr-3 h-100" data-toggle="modal" data-target="#sellCarModal"><span class="fas fa-hand-holding-usd"></span>
        Sell your car
      </button>
    </div>
    <% } %> 
    <% if (typeof marketAds == "undefined" || marketAds.length == 0) { %>
    <div class="row justify-content-center">

      <div class="alert alert-primary m-4 p-3 text-center" role="alert">
        Currently there are no ads.
        <br />
        Check back later!
      </div>
    </div>
    <% } else { %>
    <div class="row">
      <div class="col">
        <% marketAds.forEach((marketAd) =>{ %>
        <%- include('inc/marketAdCard', {marketAd: marketAd}); -%>
        <% }); %>
      </div>
    </div>
    <% } %>
  </div>
  <%- include('inc/all/scripts'); -%>
  <!-- SIDE BAR SCRiPT -->
  <script type="text/javascript">
    $("[data-toggle=\"tooltip\"]").tooltip();
    $(document).ready(function () {
      $('#sidebarCollapse').on('click', function () {
        $('#sidebar').toggleClass('active');
      });
    });

    function closeSidebar() {
      if (!$('#sidebar').hasClass('active')) {
        $('#sidebarCollapse').click();
      }
    }
  </script>
</body>

</html>