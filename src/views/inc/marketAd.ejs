<div class="card mb-3" style="max-width: 540px;">
  <a href="/marketad/<%- marketAd.id %> ">
    <div class="row no-gutters">
      <div class="col-md-4">
        <img src="/public/img/Red-Tesla/TR1.jpg" alt="" class="card-img mx-auto"
          style="height: 100%;">
      </div>
      <div class="col-md-8">
        <div class="card-body">
          <div class="row">
            <div class="col">
              <h5 class="card-title"><%- marketAd.title %></h5>
            </div>
            <div class="col">
              <div class="card-text float-right"><%- marketAd.price %>$</div>
            </div>
          </div>
          <p class="card-text text-muted"><%- marketAd.fuel_type %>, <%- marketAd.year %>,
            <%- marketAd.cubic_capacity %> cm<sup>3</sup>, <%- marketAd.horsepower %> HP, <%- marketAd.milage %> km</p>
        </div>
      </div>
    </div>
  </a>
</div>