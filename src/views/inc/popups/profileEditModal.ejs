<div class="modal fade bd-example-modal-lg" id="profileeditModal" tabindex="-1" role="dialog"
    aria-labelledby="profileeditModalTitle" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="profileeditModalTitle">Edit your profile</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form method="POST" action="/account/editprofile" id="editaction">
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label"><span class="text-danger">*</span>Password</label>
                        <div class="col-sm-10">
                            <input name="password" type="password" class="form-control" placeholder="Your Password" required>
                        </div>
                    </div>
                    <hr>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Phone</label>
                        <div class="col-sm-10">
                            <input name="phone" type="number" class="form-control" placeholder="Phone number" value="<%- userdata.phone %>">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">E-mail</label>
                        <div class="col-sm-10">
                            <input name="email" type="email" class="form-control" placeholder="E-mail" value=<%- userdata.email %>>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Birth Date</label>
                        <div class="col-sm-10">
                            <input name="birth_date" type="date" max="2030-12-31" min="1900-01-01" class="form-control"
                                placeholder="YYYY.MM.DD">
                        </div>
                    </div>
                    <hr>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Country</label>
                        <div class="col-sm-10">
                            <input name="country" type="text" class="form-control" placeholder="Your Country" value="<%- userdata.country %>">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Language</label>
                        <div class="col-sm-10">
                            <select class="form-control" disabled>
                                <option>English</option>
                            </select>
                        </div>
                    </div>
                    <div class="modal-footer justify-content-center">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-primary">Save Changes</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>