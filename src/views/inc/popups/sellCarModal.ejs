<div class="modal fade bd-example-modal-lg" id="sellCarModal" tabindex="-1" role="dialog"
    aria-labelledby="sellCarModalTitle" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="sellCarModalTitle">Create a new AD</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form method="POST" action="/newmarketad">
                    
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Title</label>
                        <div class="col-sm-10">
                            <input name="title" type="text" class="form-control" placeholder="Car's Title">
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Price</label>
                        <div class="col-sm-10">
                            <input name="price" type="number" class="form-control" placeholder="Price in â‚¬">
                        </div>
                    </div>

                    <hr>

                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Make</label>
                        <div class="col-sm-10">
                            <input name="make" type="text" class="form-control" placeholder="Make">
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Model</label>
                        <div class="col-sm-10">
                            <input name="model" type="text" class="form-control" placeholder="Model">
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Shape</label>
                        <div class="col-sm-10">
                            <input name="shape" type="text" class="form-control" placeholder="Shape">
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Fuel Type</label>
                        <div class="col-sm-10">
                            <input name="fuel_type" type="text" class="form-control" placeholder="Fuel Type">
                        </div>
                    </div>
                    
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Horsepower</label>
                        <div class="col-sm-10">
                            <input name="horsepower" type="number" class="form-control" min="10" step="10" placeholder="Horsepower">
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">CM<sup>3</sup></label>
                        <div class="col-sm-10">
                            <input name="cubic_capacity" type="number" class="form-control" min="100" step="100" placeholder="Cubic Capacity">
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Milage</label>
                        <div class="col-sm-10">
                            <input name="milage" type="number" class="form-control" placeholder="Milage in km">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Year</label>
                        <div class="col-sm-10">
                            <input name="year" type="number" class="form-control" min="1800" value="2000" placeholder="Year">
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Doors</label>
                        <div class="col-sm-10">
                            <input name="doors" type="number" class="form-control" min="0" max="30" placeholder="Number of Doors">
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Seats</label>
                        <div class="col-sm-10">
                            <input name="seats" type="number" class="form-control" min="1" max="200" placeholder="Number of Seats">
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Description</label>
                        <div class="col-sm-10">
                            <textarea name="description" class="form-control" placeholder="Your detailed description" cols="30" rows="5"></textarea>
                        </div>
                    </div>



                    <!-- <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Language</label>
                        <div class="col-sm-10">
                            <select class="form-control" disabled>
                                <option>English</option>
                            </select>
                        </div>
                    </div> -->

                    <div class="modal-footer justify-content-center">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-primary">Create ad</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>