<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('inc/all/head'); -%>
  <title>Car Clutch Club</title>
</head>
<body>
  <%- include('inc/all/navbar'); -%>
  <!-- Page Content -->
  <div class="container">
    <!-- Portfolio Item Heading -->
    <div class="row">
      <div class="col">
        <h1 class="my-4 text-info"><%- marketAd.make %> <%- marketAd.model %>
          <small class="text-info"><%- marketAd.title %></small> <span class=" text-success float-right"><%- marketAd.price %>â‚¬</span>
        </h1>
      </div>
    </div>

    <!-- Portfolio Item Row -->
    <div class="row">

      <div class="col-md-8 mb-3">
        <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
          <ol class="carousel-indicators">

            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
            <% for (let i = 1; i < photos; i++) { %>
              <li data-target="#carouselExampleIndicators" data-slide-to="<%- i %>"></li>
            <% } %> 

          </ol>
          <div class="carousel-inner">

            <% if (photos == 0) { %>
              <div class="carousel-item active embed-responsive embed-responsive-16by9">
                <img class="d-block w-100 rounded embed-responsive-item" src="/public/img/uploads/market/error.png" alt="First slide">
              </div>
            <% } else { %> 
              <div class="carousel-item active">
                <div class="embed-responsive embed-responsive-16by9">
                  <img class="d-block w-100 rounded embed-responsive-item" src="/public/img/uploads/market/<%- marketAd.id%>/0.png">
                </div>
              </div>

              <% for (let i = 1; i < photos; i++) { %>
                <div class="carousel-item">
                  <div class="embed-responsive embed-responsive-16by9">
                    <img class="d-block w-100 rounded embed-responsive-item" src="/public/img/uploads/market/<%- marketAd.id%>/<%- i %>.png">
                  </div>
                </div>
              <% } %> 

            <% } %>

          </div>
          <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
          </a>
          <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
          </a>
        </div>
      </div>

      <div class="col-md-4">

        <div class="pb-2">
          <div class="border border-secondary rounded bg-light">
            <div class="pl-3 pr-3">
              <h3 class="my-3">Car Details</h3>
                <div class="row no-gutters">

                  <div class="col-7">
                    <p class="m-0 pb-1"><span class="text-secondary"> Make: </span> <%- marketAd.make %> </p>
                    <p class="m-0 pb-1"><span class="text-secondary"> Milage: </span> <%- marketAd.milage %> km </p>
                    <p class="m-0 pb-1"><span class="text-secondary"> Fuel Type: </span> <%- marketAd.fuel_type %> </p>
                    <p class="m-0 pb-1"><span class="text-secondary"> Cubic Capacity: </span> <%- marketAd.cubic_capacity %> cm<sup>3</sup> </p>
                    <p class="m-0 pb-1"><span class="text-secondary"> Vehicle Shape: </span> <%- marketAd.shape %>  </p>
                  </div>
      
                  <div class="col-5">
                    <div class="m-0 pb-1">
                      <p class="m-0 pb-1"><span class="text-secondary"> Model: </span> <%- marketAd.model %>  </p>
                      <p class="m-0 pb-1"><span class="text-secondary"> Year: </span> <%- marketAd.year %> </p>
                      <p class="m-0 pb-1"><span class="text-secondary"> HP: </span> <%- marketAd.horsepower %> HP </p>
                      <p class="m-0 pb-1"><span class="text-secondary"> Doors: </span> <%- marketAd.doors %> </p>
                      <p class="m-0 pb-1"><span class="text-secondary"> Seats: </span> <%- marketAd.seats %> </p>
                    </div>
                  </div>
      
                </div>
            </div>
          </div>
        </div>

        <div class="pt-2">
          <div class="border border-secondary rounded bg-light">
            <div class="pl-3 pr-3">
              <div class="row">

                <div class="col-9">
                  <h3 class="my-3">Seller's Profile</h3>
                </div>

                <div class="col-3 ">
                  <a href="/account/profile/<%- marketAd.ownerid %>"><button class="btn btn-outline-primary my-3 float-right">Profile</button></a>
                </div>

              </div>

              <div class="m-0 pb-1">
                <p class="m-0 pb-1"><span class="text-secondary"> Seller: </span> <%- marketAd.username %> </p>
                <p class="m-0 pb-1"><span class="text-secondary"> Email: </span> <%- marketAd.email %> </p>
                <p class="m-0 pb-1"><span class="text-secondary"> Language: </span> <%- marketAd.language %> </p>
                <% if (marketAd.country) { %>
                <p class="m-0 pb-1"><span class="text-secondary"> Country: </span> <%- marketAd.country %> </p>
                <% } %>
                <% if (marketAd.phone) { %>
                <p class="m-0 pb-1"><span class="text-secondary"> Phone: </span> <%- marketAd.phone %> </p>
                <% } %>

              </div>

            </div>
          </div>
        </div>

      </div>

    </div>
    <!-- /.row -->

    <!-- Related Projects Row -->
    <% if (marketAd.description) { %>
      <h3 class="mb-3 mt-1 text-info">Description</h3>
      <div class="mb-4  p-3 border border-dark rounded bg-light"><%- marketAd.description %></div>
    <% } %>
    

  </div>
  <!-- /.container -->
  <%- include('inc/all/scripts'); -%>
</body>