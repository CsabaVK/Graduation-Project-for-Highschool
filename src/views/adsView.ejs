<body>
  <%- include('inc/navbar'); -%>
  <div class="main">
    <div class="row mr-0 ml-0">
      <div class="col-md borderonmain p-0">
        <div class="row maintitle m-0">
          <div class="col-3"></div>
          <div class="col-6 text-white text-center m-0 p-2 maintitle">
            <h3 class="m-0">Pictures</h3>
          </div>
        </div>
        <div class="container p-0">
          <div class="mySlides">
            <div class="numbertext card-img">1 / 6</div>
            <div>
              <img src="/public/img/Red-Tesla/TR1.jpg" class="card-img img-fluid">
            </div>
          </div>
          <div class="mySlides">
            <div class="numbertext position-absolute">2 / 6</div>
            <div class="">
              <img src="/public/img/Red-Tesla/TR2.jfif" class="card-img img-fluid">
            </div>
          </div>
          <div class="mySlides">
            <div class="numbertext position-absolute">3 / 6</div>
            <div class="card-img">
              <img src="/public/img/Red-Tesla/TR3.jpg" class="card-img img-fluid">
            </div>
          </div>
          <div class="mySlides">
            <div class="numbertext position-absolute">4 / 6</div>
